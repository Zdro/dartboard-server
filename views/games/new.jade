extends ../layout

block content
  nav.light-blue.lighten-3
    .nav-wrapper.container
      .col.s12
        a(href="/").breadcrumb Dartboard
        a(href="/games").breadcrumb Games
        a(href="/games/new").breadcrumb New
  .container
    .section
      h1.header.center.orange-text= title
    .section
      form(action="/games/new", method="post")
        .row
          .col.s12.m6
            h4 
              | Players 
              a(href="#", rel="noopener noreferrer", onClick="addNewPlayer()").waves-effect.waves-light.btn.orange Add
            #players
              input#nb-players(type="hidden", name="nb-players", value="0")           
          .col.s12.m6
            h4 Game
            .input-field.col.s12
              select(name="game")
                each game in games
                  option(value=game) #{game}
              label(for="game") Select a game
        .row
          button.waves-effect.waves-light.btn.btn-large.col.s12.orange GO !

block links
  script(src="/javascripts/new-game.js")
  if errors
    each error in errors
      script.
        M.toast({html: '#{error.msg}'});